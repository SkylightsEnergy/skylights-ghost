{{#post}}
<section class="section pb-5">
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-12">
                <div class="text-center">
                    <h2 class="text-dark text-capitalize">{{title}}</h2>
                    <p class="text-muted font-weight-bold">
                        Posted on: <span class="text-primary">{{date published_at}}</span>&nbsp;/&nbsp; 
                        Author: <span class="text-primary">{{primary_author.name}}</span>&nbsp;/&nbsp;
                        Categories: <span class="text-primary">{{primary_tag.name}}</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="row mt-3 justify-content-center">
            <div class="col-lg-8">
                {{!-- Displays the featured image if exists --}}
                {{#if feature_image}}
                    <figure>
                        <img src="{{img_url feature_image}}" alt="{{title}}" class="img-fluid" />
                    </figure>
                {{/if}}
                <div class="text-justify pt-4">
                    <p>{{content}}</p>
                </div>
            </div>
        </div>
    </div>
</section>
{{!-- recent posts --}}
<section class="section pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-left">
                    <h3 class="text-dark">Our Recent Posts</h3>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            {{#get "posts" limit="3" as |recent|}}
                {{#foreach recent}}
                <div class="col-lg-4">
                    <div class="blog-box mt-4 bg-white">
                        {{#if feature_image}}
                            <img 
                            src="{{img_url feature_image}}"
                            class="img-fluid rounded" alt="" />
                        {{/if}}
                        <div class="blog-contain p-4">
                            <div class="blog-user-box bg-white rounded">
                                <div class="media">
                                    <div class="blog-user">
                                        {{#if feature_image}}
                                        <img
                                        src="{{img_url feature_image}}"
                                        class="img-fluid rounded" alt="user" />
                                        {{/if}}
                                    </div>
                                    <div class="media-body ml-3">
                                        <a class="h5 text-dark font-weight-bold f-13 mb-1" href="{{url}}">{{title}}</a>
                                        <p class="text-primary f-10 mb-0 font-weight-600"><i class="mdi mdi-calender"></i>{{reading_time}}</p>
                                    </div>
                                </div>
                            </div>
                            <h5 class="mt-4">
                                <a href="" class="text-dark f-18"
                                    >{{excerpt characters="100"}}</a
                                >
                            </h5>
                            <div class="mt-4 f-14">
                                <p class="mb-0">
                                    <a href="" class="text-dark"
                                        ><i class="mdi mdi-forum-outline ml-2 text-primary mr-2 f-16"></i>{{reading_time}}</a
                                    >
                                    <a href="" class="text-dark ml-4"
                                        ><i class="mdi mdi-eye-outline ml-2 text-primary mr-2 f-16"></i>{{date published_at timeago="true"}}</a
                                    >
                                </p>
                            </div>
                            <div class="mt-4">
                                <a href="{{url}}" class="btn btn-primary btn-sm">Read more <i class="mdi mdi-arrow-right ml-2"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/foreach}}
            {{/get}}
        </div>
    </div>
</section>
