                    </div>
                </div>
            </div>
            <div class="row mt-5 pt-3">
                {{#get "posts" filter="tags:[stories]" limit="all" as |allposts| }}
                    {{#foreach allposts}}
                <div class="col-lg-4">
                    <div class="blog-box mt-4 bg-white">
                        <img 
                        src="{{img_url feature_image}}"
                        class="img-fluid rounded" alt="" />
                        <div class="blog-contain p-4">
                            <div class="blog-user-box bg-white rounded">
                                <div class="media">
                                    <div class="blog-user">
                                        <img
                                        src="{{img_url feature_image}}"
                                        class="img-fluid rounded" alt="user" />
                                    </div>
                                    <div class="media-body ml-3">
                                        {{!-- <h5 class="f-13 mb-1">{{title}}</h5> --}}
                                        <a class="h5 text-dark font-weight-bold f-13 mb-1" href="{{url}}">{{title}}</a>
                                        <p class="text-primary f-10 mb-0 font-weight-600"><i class="mdi mdi-calender"></i>{{reading_time}}</p>
                                    </div>
                                </div>
                            </div>
                            <h5 class="mt-4">
                                <a href="" class="text-dark f-18"
                                    >{{excerpt characters="100"}}</a
                                >
                            </h5>
                            <div class="mt-4 f-14">
                                <p class="mb-0">
                                    <a href="" class="text-dark"
                                        ><i class="mdi mdi-forum-outline ml-2 text-primary mr-2 f-16"></i>{{reading_time}}</a
                                    >
                                    <a href="" class="text-dark ml-4"
                                        ><i class="mdi mdi-eye-outline ml-2 text-primary mr-2 f-16"></i>{{date published_at timeago="true"}}</a
                                    >
                                </p>
                            </div>
                            <div class="mt-4">
                                <a href="{{url}}" class="btn btn-primary btn-sm">Read more <i class="mdi mdi-arrow-right ml-2"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/foreach}}
                {{/get}}
            </div>
        </div>
    </section>
